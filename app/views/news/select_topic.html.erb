<div id="content-header">
  <h1><%= "News" %></h1>
  <h3><%= t('select_topic') %></h3>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><p><%= flash[:warn_notice] %></p> </div>
  <% end %>

  <div class="box">
    <div class = "modules">
      <% @topics.each do |t| %>
        <div class="link-box">
          <div class="link-heading"><%= link_to t.name, topic_news_index_path(t) %></div>
        </div>
      <% end %>
    </div>
    <div class="extender"></div>
  </div>
</div>