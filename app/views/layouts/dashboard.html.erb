<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <% @direction = "stylesheets/" %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> 
    <title>CMS</title>
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/ico" />

    <%= stylesheet_link_tag(@direction+'_layouts/dashboard')%>
    <%= stylesheet_link_tag(*get_stylesheets) %>
    <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
    <%= javascript_include_tag "application" %>
    <%#= javascript_include_tag "public/assets/prototype" %>


    <%#= javascript_include_tag :defaults, :cache => 'cache/javascripts/all' %>
    <%#= javascript_include_tag 'scripts/nicetitle', 'droplicious' %>
    <%#= javascript_include_tag 'jquery/jquery.min.js' %>
    <%#= javascript_include_tag 'jquery/jquery-ui.min.js'%>
    <%#= javascript_include_tag 'jquery/jquery.hotkeys.js'%>
  </head>

  <body>
    <div id="header_bg">
      <div id="header">
        <div id="outer-header-link">
          <div id="institution-name">
            <%#= "PLACEMENT PREPARATORY PROGRAM" %>
          </div>
          <div id="header_link" >
            
            <div id="profile-link">
              <%= link_to @current_user.firstname, {:controller => 'user', :action => 'profile'}, :class=>"profile-link" %>
            </div>
           

            <div id="logout-link">
            <%= link_to "Logout", :controller => 'user', :action => 'logout'%>
            </div>
          </div>
        </div>
        <div id="outer-main-menu">
          <%= render :partial => "layouts/main_menu" %>
        </div>
        
      </div>
    </div>
      <div id="content"> <%= yield %> </div>

      <div class="extender"></div>
    </div>
  </body>
</html>
