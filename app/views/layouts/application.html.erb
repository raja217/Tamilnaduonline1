<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <% @direction =  'stylesheets/' %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>CMS</title>
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/ico" />

    <%= stylesheet_link_tag(@direction+'application')%>
    <%= stylesheet_link_tag(*get_stylesheets) %>
    <%= javascript_include_tag "javascripts/application" %>
    <%= javascript_include_tag "javascripts/prototype" %>
    <script src="/assets/ckeditor/ckeditor.js" type="text/javascript"></script>
    
    
    <%= calendar_date_select_includes 'blue'%>
    <script src="https://www.google.com/jsapi"></script>
    <script src="https://www.youtube.com/iframe_api"></script>
    <%#= javascript_include_tag :defaults, :cache => 'cache/javascripts/all' %>
   
    <% CalendarDateSelect.format = :american %>
  </head>

  <body>
    <div id="header_bg">
      <div id="header">
        <div id="outer-header-link">
          <div id="LOGO">
            <%#= "PLACEMENT PREPARATORY PROGRAM" %>
          </div>
          <div id="header_link" >
            <div id="profile-link">
              <%= link_to @current_user.firstname, {:controller => 'user', :action => 'profile'}, :class=>"profile-link" %>
            </div>
            <div id="logout-link">
              <%= link_to "Logout", :controller => 'user', :action => 'logout'%>
            </div>
          </div>
        </div>
        <div id="outer-main-menu">
          <%= render :partial => "layouts/main_menu" %>
        </div>
      </div>
    </div>
      <div id="content"> <%= yield %> </div>

      <div class="extender"></div>
    </div>

    
  </body>
</html>
