<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <% @direction =  'stylesheets/' %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> 
    <title>CMS</title>
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/ico" />

    <%= stylesheet_link_tag(@direction+'main')%>
    <%= stylesheet_link_tag(*get_stylesheets) %>
    <script src="/assets/javascripts/prototype.js" type="text/javascript"></script>
    
    <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
    <script src="https://www.google.com/jsapi"></script>
    <script src="https://www.youtube.com/iframe_api"></script>
  </head>

  <body>
    <div id="header_bg">
      <div id="header">
          <div id= "head_left"></div>
          <div id="institution-name">
            <%= link_to image_tag('images/logo.png'), root_url %>
            
          </div>
          <div id= "head_right"></div>
          <div id="outer-main-menu">
          <%= render :partial => "layouts/main_form" %>
        </div>
        </div>
        
        
      </div>
    </div>
      <div id="content"> <%= yield %> </div>

      <div class="extender"></div>
      <script type="text/javascript">
        $("#main-menu > li").click(function(){
        $("#main-menu > li").removeClass("active1");
        $(this).addClass("active1");
        });
      </script>
    </div>
  </body>
</html>
