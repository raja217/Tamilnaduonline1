<div id="content-header">
  <h1><%= "Admins" %></h1>
  <h3><%= "Edit users" %></h3>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <%= form_for :user do |u| %>

    <div id="edit_user_form">



      <div class="label-field-pair">
        <label for="user_username"><%= t('username') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= u.text_field :username, :value => @user.username%></div>
      </div>

      <div class="label-field-pair">
        <label for="user_first_name"><%= t('first_name') %></label>
        <div class="text-input-bg"><%= u.text_field :firstname, :value => @user.firstname%></div>
      </div>

      <div class="label-field-pair">
        <label for="user_last_name"><%= t('last_name') %></label>
        <div class="text-input-bg"><%= u.text_field :lastname, :value => @user.lastname%><br/></div>
      </div>
      <div class="label-field-pair">
        <label for="user_email"><%= t('email') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= u.text_field :email, :value => @user.email %></div>
      </div>
  
        <%= submit_tag "", :value => "â–º Update", :class => "user_submit_button" %>

    </div>

    <div class="extender"></div>

  <% end  %>

</div>