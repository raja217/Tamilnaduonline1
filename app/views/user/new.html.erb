<div id="content-header">
  <h1><%= "Admins" %></h1>
  <h3><%= "Add users" %></h3>
</div>
<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <%= form_for(@user, :url => user_index_path, :html=> {:multipart=>true}) do |f| %>

    <%#= f.error_messages %>

    <div id="create_user_form">


      <div class="label-field-pair">
        <label for="user_username"><%= t('username') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.text_field :username %></div>
      </div>

      <div class="label-field-pair">
        <label for="user_first_name"><%= t('first_name') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.text_field :firstname %></div>
      </div>

      <div class="label-field-pair">
        <label for="user_last_name"><%= t('last_name') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.text_field :lastname %></div>
      </div>

       <div class="label_field_pair">
          <label class="label_for_student_gender" for="student_gender"><%= "Role" %><span class="necessary-field">*</span></label>
          <div class="student_gender_value">
            <label class="label_for_gender" for="student_gender_true"> <%= "Admin" %></label>
            <%= f.check_box :admin %>
            <label class="label_for_gender" for="student_gender_false"><%= "Content Editor" %></label>
            <%= f.check_box :conedit %>
            
          </div>
        </div>

      <div class="label-field-pair">
        <label for="user_email"><%= t('email') %> <span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.text_field :email %></div>
      </div>

      <%#= f.hidden_field :role, :value=>'Admin' %>
      <div class="extender"></div>

      <%= submit_tag "", :value => "â–º Create User", :class => "user_submit_button" %>
      
    </div>

  <% end  %>

</div>