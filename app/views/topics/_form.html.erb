<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
  <%= form_for(@topic) do |f| %>
 

  <div id="create_user_form">

      <div class="label-field-pair">
        <label for="user_username"><%= "Name" %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.text_field :name %></div>
      </div>
       <div class="label_field_pair">
        <label class="label_for_student_gender" for="student_gender"><%= "Priority" %></label>
        <div class="student_gender_value">
        <% unless @topics.nil?%>
          <label class="label_for_gender" for="student_gender_true"> <%= "Severe" %></label>
            <%= f.radio_button 'order', '1'%>
          <label class="label_for_gender" for="student_gender_false"><%= "High" %></label>
          
            <%= f.radio_button 'order', '2'%>
      
          <label class="label_for_gender" for="student_gender_true"> <%= "Medium" %></label>
            <%= f.radio_button 'order', '3'%>
          <label class="label_for_gender" for="student_gender_false"><%= "Low" %></label>
            <%= f.radio_button 'order', '4'%>
        <% end%>
        </div>
      </div>

      <div class="label_field_pair">
          <label class="label_for_student_gender" for="student_gender"><%= "Topic Details" %></label>
          <div class="student_gender_value">
            <label class="label_for_gender" for="student_gender_true"> <%= "Picture" %></label>
            <%= f.check_box :picture %>
            <label class="label_for_gender" for="student_gender_false"><%= "Video" %></label>
            <%= f.check_box :video %>
            
          </div>
        </div>

      <div class="extender"></div>

      <%= submit_tag "", :value => "Create Topic", :class => "user_submit_button" %>
      
    </div>

  <% end  %>

</div>
