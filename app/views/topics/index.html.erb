<div id="content-header">
  <h1><%= "Topics" %></h1>
  <h3><%= "List all topics" %></h3>
</div>

<div class="students-table">
  <table align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
    <td><%= "Topics" %></td>
      <td><%= "Format" %></td>
      <td><%= "" %></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td></td>
    </tr>

<% @topics.each do |topic| %>
    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-1">
        <%= topic.name %>
      </td>

      <td class="col-2">
        <% if topic.video == true %> 
          <%= "Topic contains Video" %>
        <% else %>
          <%= "Topic contains picture" %>
        <% end %>
      </td>

      <td class="col-1">
        <%= link_to 'Show', topic %> | <%= link_to 'Edit', edit_topic_path(topic) %> | <%= button_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
<% end %>
</table>

<br />
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "Add Topics", :action => "new" %></li>
  </ul>
</div>
